@model GestorHorarioG6.Models.RequisicaoDetalhe

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar</h2>

<div>
    <h4>Requisição</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Departamento</dt>
        <dd>
            @Html.DisplayFor(model => model.Requisicao.Departamento.Nome)
        </dd>
        <dt>Serviço</dt>
        <dd>
            @Html.DisplayFor(model => model.Servico.Nome)
        </dd>
        <dt>Hora de Início</dt>
        <dd>
            @Html.DisplayFor(model => model.HoraDeInicio)
        </dd>
        <dt>Duração Estimada</dt>
        <dd>
            @Html.DisplayFor(model => model.DuraçãoEstimada)
        </dd>
        <dt>Concluído</dt>
        <dd>
            @Html.DisplayFor(model => model.HoraConcluido)
        </dd>
        <dt>Notas</dt>
        <dd>
            @Html.DisplayFor(model => model.Notas)
        </dd>
        <dt>Aprovado</dt>
        <dd>
            @Html.DisplayFor(model => model.Aprovado ? "Sim" : "Não")
        </dd>
        <dt>
            <br />
        </dt>
        <dd>
            <br />
        </dd>
        <dt>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RequisicaoDetalheId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
        </dt>
        <dd>
            <a asp-action="Index">
                <input type="submit" value="Voltar" class="btn btn-default" />
            </a>
        </dd>
    </dl>
</div>
