@model IEnumerable<GestorHorarioG6.Models.Requisicao>

@{
    ViewData["Title"] = "Requisições Aprovadas";
}

<h2>Requisições Aprovadas</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Departamento</p>
            </th>
            <th>
                <p>Hora de Início</p>
            </th>
            <th>
                <p>Hora de Fim</p>
            </th>
            <th>
                <p>Requisições Adicionais</p>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequisicoesAdicionais)
                </td>
            </tr>
        }
    </tbody>
</table>