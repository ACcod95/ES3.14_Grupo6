@model GestorHorarioG6.Models.Requisicao

@{
    ViewData["Title"] = "Requisitar";
}

<h2>Criar Requisição</h2>

<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartamentoId" class="control-label">Departamento</label>
                <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.Departamento"></select>
            </div>
        </div>
        <div class="col-md-offset-4 col-md-4">
            <div class="form-group">
                <label asp-for="Dia" class="control-label">Dia</label>
                <input asp-for="Dia" class="form-control" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Serviço</th>
                        <th>Início de Hora Crítica</th>
                        <th>Fim de Hora Crítica</th>
                        <th>Notas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalhe in Model.Detalhes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(d => detalhe.Servico)</td>
                            <td>@Html.DisplayFor(d => detalhe.HoraCriticaDe)</td>
                            <td>@Html.DisplayFor(d => detalhe.HoraCriticaAte)</td>
                            <td>@Html.DisplayFor(d => detalhe.Notas)</td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-2">
            <a asp-action="Index"><input type="button" value="Voltar" class="btn btn-default" /></a>
            <input type="submit" value="Requisitar" class="btn btn-primary" />
        </div>
    </div>
</form>
