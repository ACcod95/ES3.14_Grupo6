@model GestorHorarioG6.Models.Requisicao

@{
    ViewData["Title"] = "Requisitar";
}

<h2>Criar Requisição</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label">Data</label>
                <input asp-for="Dia" class="form-control" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoId" class="control-label">Departamento</label>
                <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"></select>
            </div>
            <div class="form-group">
                <a asp-action="Index"><input type="button" value="Voltar" class="btn btn-default" /></a>
                <input type="submit" value="Requisitar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
