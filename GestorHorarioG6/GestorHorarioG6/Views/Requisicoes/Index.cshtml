@model RequisicoesListViewModel

@{
    ViewData["Title"] = "Requisições";
}

<h2>Requisições</h2>

<p><a asp-action="Create"><input type="submit" value="Criar Requisição" class="btn btn-primary" /></a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                Departamento
            </th>
            <th>
                Hora de Início
            </th>
            <th>
                Hora de Fim
            </th>
            <th>
                Requisições Adicionais
            </th>
            <th>
                Aprovada
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Requisicoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequisicoesAdicionais)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Aprovado, new { @onclick = "Clicked(" + item.RequisicaoId + ")" })
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RequisicaoId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.RequisicaoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div pagination-model="Model.PagingInfo"></div>

<script>
    function Clicked(id) {
        $.post("/Requisicoes/Clicked/" + id);
    }
</script>
