@model RequisicoesListViewModel

@{
    ViewData["Title"] = "Requisições de Técnicos";
}

<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <h2>Requisições de Técnicos</h2>
            <p><a asp-action="Create"><input type="button" value="Criar Requisição" class="btn btn-primary" /></a><a asp-action="Aprovadas">  <input type="button" value="Requisições Aprovadas" class="btn btn-default" /></a></p>
        </div>
        <div class='col-sm-offset-2 col-sm-3'>
            <form asp-action="Index">
                <div class="form-group">
                    <br />
                    <br />
                    <div class='input-group date'>
                        <input asp-for="CurrentDay" class="form-control" />
                        <span class="input-group-addon" >
                            <button type="submit" style="border:0; background:transparent">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Departamento</p>
            </th>
            <th>
                <p>Hora de Início</p>
            </th>
            <th>
                <p>Hora de Fim</p>
            </th>
            <th>
                <p>Notas Adicionais</p>
            </th>
            <th>
                <p>Aprovar</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Requisicoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraDeFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequisicoesAdicionais)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Aprovado, new { @onclick = "Clicked(" + item.RequisicaoId + ")" })
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.RequisicaoId">Editar</a> |
                    <a class="btn btn-warning">Descrição</a>|
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RequisicaoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div pagination-model="Model.PagingInfo"></div>

<script>
    function Clicked(id) {
        $.post("/Requisicoes/Aprovar/" + id);
    }
</script>
