@model IEnumerable<GestorHorarioG6.Models.Requisicao>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RequisicaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RequisicaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RequisicaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
