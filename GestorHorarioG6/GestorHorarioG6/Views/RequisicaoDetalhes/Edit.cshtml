@model GestorHorarioG6.Models.RequisicaoDetalhe

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequisicaoDetalheId" />
            <div class="form-group">
                <input asp-for="RequisicaoId" type="hidden" value="@ViewBag.RequisicaoId" />
                <input asp-for="Aprovado" type="hidden" value="@Model.Aprovado" />
                <input asp-for="HoraConcluido" type="hidden" value="@Model.HoraConcluido" />
            </div>
            <div class="form-group">
                <label asp-for="ServicoId" class="control-label">Serviço</label>
                <select asp-for="ServicoId" class="form-control" asp-items="ViewBag.ServicoId"></select>
                <span asp-validation-for="ServicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCriticaDe" class="control-label">Início da Hora Crítica</label>
                <input asp-for="HoraCriticaDe" class="form-control" />
                <span asp-validation-for="HoraCriticaDe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCriticaAte" class="control-label">Fim da Hora Crítica</label>
                <input asp-for="HoraCriticaAte" class="form-control" />
                <span asp-validation-for="HoraCriticaAte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notas" class="control-label"></label>
                <textarea asp-for="Notas" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <input type="button" value="Voltar" class="btn btn-default" onclick="history.back();return false;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
