@model ServicosListViewModel

@{
    ViewData["Title"] = "Serviços";
}

<h2>Serviços</h2>

<p>
    <a asp-action="Create"><input type="button" value="Criar Serviço" class="btn btn-primary" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Nome</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Servicos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td  align="right">

                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ServicoId">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.ServicoId">Detalhes</a>|
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ServicoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div pagination-model="Model.PagingInfo"></div>