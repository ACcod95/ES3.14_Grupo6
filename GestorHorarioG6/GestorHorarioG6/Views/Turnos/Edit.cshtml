@model GestorHorarioG6.Models.Turno

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Turno</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TurnoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label">Hora de inicio</label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label">Hora de fim</label>
                <input asp-for="HoraFim" class="form-control" />
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pausa" class="control-label"></label>
                <input asp-for="Pausa" class="form-control" />
                <span asp-validation-for="Pausa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IRefeicao" class="control-label">Inicio da refeição</label>
                <input asp-for="IRefeicao" class="form-control" />
                <span asp-validation-for="IRefeicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FRefeicao" class="control-label">Fim da refeição</label>
                <input asp-for="FRefeicao" class="form-control" />
                <span asp-validation-for="FRefeicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista de turnos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
