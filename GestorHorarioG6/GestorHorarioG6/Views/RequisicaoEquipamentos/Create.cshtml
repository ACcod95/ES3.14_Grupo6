@model GestorHorarioG6.Models.RequisicaoEquipamento

@{
    ViewData["Title"] = "Create";
}

<h2>Criar Requisição</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EquipamentoId" class="control-label">Equipamento</label>
                <select asp-for="EquipamentoId" class ="form-control" asp-items="ViewBag.EquipamentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HoraDeInicio" class="control-label">Hora de Início</label>
                <input asp-for="HoraDeInicio" class="form-control" />
                <span asp-validation-for="HoraDeInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraDeFim" class="control-label">Hora de Fim</label>
                <input asp-for="HoraDeFim" class="form-control" />
                <span asp-validation-for="HoraDeFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bloco" class="control-label">Bloco</label>
                <select asp-for="BlocoId" class ="form-control" asp-items="ViewBag.BlocoId"></select>
            </div>
        </form>
    </div>
</div>

<div>
    <input type="submit" value="Criar Requisição" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-default">Voltar para a lista </a>
</div>

