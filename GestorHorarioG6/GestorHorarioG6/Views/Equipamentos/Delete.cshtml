@model GestorHorarioG6.Models.Equipamento

@{
    ViewData["Title"] = "Delete";
}

<h2>Apagar Equipamento</h2>

<h3>Tem a certeza que quer apagar o equipamento?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            Bloco:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bloco.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipamentoId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <br />
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
</div>

