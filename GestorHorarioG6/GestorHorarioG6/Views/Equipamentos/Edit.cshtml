@model GestorHorarioG6.Models.Equipamento

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Equipamento</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EquipamentoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlocoId" class="control-label">Bloco</label>
                <select asp-for="BlocoId" class="form-control" asp-items="ViewBag.BlocoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Alterações" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
</div>

