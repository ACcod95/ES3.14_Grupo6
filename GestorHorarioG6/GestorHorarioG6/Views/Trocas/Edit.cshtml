@model GestorHorarioG6.Models.Trocas

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Troca</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrocasID" />
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId2" class="control-label"></label>
                <select asp-for="FuncionarioId2" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId2" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DiaF1" class="control-label"></label>
                <input asp-for="DiaF1" class="form-control" />
                <span asp-validation-for="DiaF1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaF2" class="control-label"></label>
                <input asp-for="DiaF2" class="form-control" />
                <span asp-validation-for="DiaF2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Conhecimento" /> @Html.DisplayNameFor(model => model.Conhecimento)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

