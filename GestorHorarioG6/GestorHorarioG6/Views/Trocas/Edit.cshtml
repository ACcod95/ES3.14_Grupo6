@model GestorHorarioG6.Models.Trocas

@{
    ViewData["Title"] = "Edit";
}

<h2>Trocas</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrocasID" />
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioATrocarId" class="control-label"></label>
                <select asp-for="HorarioATrocarId" class="form-control" asp-items="ViewBag.HorarioATrocarId"></select>
                <span asp-validation-for="HorarioATrocarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioParaTrocaId" class="control-label"></label>
                <select asp-for="HorarioParaTrocaId" class="form-control" asp-items="ViewBag.HorarioParaTrocaId"></select>
                <span asp-validation-for="HorarioParaTrocaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoTrocaId" class="control-label"></label>
                <select asp-for="EstadoTrocaId" class="form-control" asp-items="ViewBag.EstadoTrocaId"></select>
                <span asp-validation-for="EstadoTrocaId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <input type="submit" value="Guardar" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
