@model GestorHorarioG6.Models.Trocas

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar troca</h2>

<h3>Deseja apagar esta troca?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Funcionário
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Funcionario.Nome)
        </dd>
        <dt>
           Data
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
            Horário a trocar
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioATrocar.HorarioATrocarId)
        </dd>
        <dt>
            Horário para trocar
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioParaTroca.HorarioParaTrocaId)
        </dd>
        <dt>
            Estado
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado.EstadoTrocaId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TrocasID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
