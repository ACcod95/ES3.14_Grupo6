@model PedidoDeTrocaViewModel

@{
    ViewData["Title"] = "Trocas";
}

<h2>Trocas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Funcionario
            </th>
            <th>
               Data
            </th>
            <th>
                HorarioATrocar
            </th>
            <th>
                HorarioParaTroca
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trocas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioATrocar.HorarioATrocarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioParaTroca.HorarioParaTrocaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoTrocaId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.TrocasID">Edit</a> |
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.TrocasID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TrocasID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
